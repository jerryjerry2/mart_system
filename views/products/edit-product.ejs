<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header'); %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

         <!-- Sidebar -->
         <%- include('../partials/sidebar'); %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('../partials/topbar'); %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Edit Product</h1>
                    <div class="container">
                        <div class="card shadow mb-12">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Edit Product</h6>
                            </div>
                            
                            <div class="card-body">
                                <% result.forEach((val) => { %>
                                <form class="user" action="/product/create" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <input type="text" value="<%= val.name %>" class="form-control form-control-user" required name="name" aria-describedby="" placeholder="Product Name">
                                    </div>
                                    <div class="form-group">
                                        <input type="number" value="<%= val.price %>" class="form-control form-control-user" required name="price" aria-describedby="" placeholder="Product Price">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" value="<%= val.des %>" class="form-control form-control-user" name="description" aria-describedby="" placeholder="Description">
                                    </div>
                                    <div class="form-group" required>
                                        <select name="category" id="" class="classic">
                                            <% result.forEach((val) => { %>
                                            <option value="" selected disabled hidden>Select Category</option>
                                            <option value="<%= val.id %>"><%= val.name %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <input type="number" value="<%= val.amount %>" class="form-control form-control-user" required name="amount" aria-describedby="" placeholder="Amount">
                                    </div>
                                    <div class="form-group">
                                        <input type="number" value="<%= val.discount %>" class="form-control form-control-user"  name="discount" aria-describedby="" placeholder="Discount">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" value="<%= val.income_date %>" type="date" name="income_date" required>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" value="<%= val.expired_date %>" type="date" name="expired_date" required>
                                    </div>
                                    <button class="btn btn-primary btn-user btn-block btn-create">
                                        Create
                                    </button>
                                    <hr>
                                </form>
                                <% }) %>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../partials/footer'); %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('../partials/scriptLink'); %>

</body>

</html>